<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- DEFAULT LIGHT THEME -->
    <!-- Override the properties of the following styles to create custom Styles -->
    <style name="HSAppBaseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Application Style. -->
    <style name="HSAppTheme" parent="HSAppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--1. Style for background of all screens -->
    <style name="hs_backgroundStyle" parent="hs_background_defaultStyle"></style>

    <!--2. Articles and issues list -->
    <style name="hs_listViewStyle" parent="hs_listView_defaultStyle"></style>

    <!-- Header background of main list view -->
    <style name="hs_listView_headerBackgroundStyle" parent="hs_listView_headerBackground_defaultStyle"></style>

    <!-- Child view background of main list view -->
    <style name="hs_listView_childBackgroundStyle" parent="hs_listView_childBackground_defaultStyle"></style>

    <!-- ListView header text -->
    <style name="hs_listView_headerTextStyle" parent="hs_listView_headerText_defaultStyle"></style>

    <!-- ListView child text -->
    <style name="hs_listView_childTextStyle" parent="hs_listView_childText_defaultStyle"></style>

    <!-- Chat screen - left chat bubble style -->
    <style name="hs_leftChatBubbleStyle" parent="hs_leftChatBubble_defaultStyle"></style>

    <!-- Chat screen - left chat bubble triangle style -->
    <style name="hs_leftChatBubbleTriangleStyle" parent="hs_leftChatBubbleTriangle_defaultStyle"></style>

    <!-- Chat screen - right chat bubble style -->
    <style name="hs_rightChatBubbleStyle" parent="hs_rightChatBubble_defaultStyle"></style>

    <!-- Chat screen - right chat bubble triangle style -->
    <style name="hs_rightChatBubbleTriangleStyle" parent="hs_rightChatBubbleTriangle_defaultStyle"></style>

    <!-- Chat screen message text style for right chat bubble -->
    <style name="hs_right_messageTextStyle" parent="@style/hs_rightmessageText_defaultStyle"></style>

    <!-- Chat screen message text style for left chat bubble -->
    <style name="hs_left_messageTextStyle" parent="@style/hs_leftmessageText_defaultStyle"></style>

    <!-- Chat screen more info text style - applied to the sender name and time -->
    <style name="hs_smallTextStyle" parent="@style/hs_smallText_defaultStyle"></style>

    <!-- Button Style - applied for report issue button -->
    <style name="hs_buttonStyle" parent="@style/hs_button_defaultStyle"></style>

    <!-- Edit text Style in new user and new issue screen -->
    <style name="hs_editTextStyle" parent="@style/hs_editText_defaultStyle"></style>

    <!-- Edit text Style used in chat screen - add reply -->
    <style name="hs_messageEditTextStyle" parent="@style/hs_editText_defaultStyle"></style>

    <!-- DRAWABLES -->
    <!-- Defining the drawable icons used in the project, override the drawable to give your own custom icons -->

    <!-- Attachment icon used in New Issue screen, and chat screen to show attachments -->
    <drawable name="hs_attachment_icon">@drawable/hs_attachment</drawable>

    <!-- Search icon used in search menu -->
    <drawable name="hs_search_icon">@drawable/hs_search_light</drawable>

    <!-- Disclosure icon used in main list view -->
    <drawable name="hs_disclosure_next">@drawable/hs_disclosure</drawable>

    <!-- Add attachment icon used in issue detail screen - add reply -->
    <drawable name="hs_add_attachment">@drawable/hs_add_attachment_img</drawable>

    <!-- Accept icon used in New issue and New user screen -->
    <drawable name="hs_action_accept">@drawable/hs_accept_light</drawable>

    <!-- Accept icon used in New issue screen if user has not registered -->
    <drawable name="hs_action_forward">@drawable/hs_forward_light</drawable>
</resources>
